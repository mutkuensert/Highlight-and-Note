<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">

        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="?attr/notestroke" >
            </stroke>
            <solid android:color="?attr/rowcolor"/>

            <corners android:radius="15dp"/>

            <padding
                android:top="5dp"
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"/>
        </shape>

    </item>

    <item
        android:state_pressed="true">

        <shape android:shape="rectangle">

            <solid android:color="#328ECAE6"/>

            <corners android:radius="15dp"/>

            <padding
                android:top="5dp"
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"/>
        </shape>

    </item>
</selector>